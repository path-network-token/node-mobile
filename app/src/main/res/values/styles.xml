<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryDark">@color/dark_slate_blue</item>
        <item name="colorAccent">@color/neon_blue</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.WalletAddressInput" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.WalletAddressInput.HintAppearance</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="colorControlNormal">@color/dark_slate_blue</item>
        <item name="colorControlActivated">@color/dark_slate_blue</item>
    </style>

    <style name="AppTheme.WalletAddressInput.HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/sky</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="JobReportLinearChartLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.13</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="JobReportSectionLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:textColor">@color/sky</item>
    </style>

    <style name="JobReportLinearChartValue">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressLogs">
        <item name="android:letterSpacing">0.13</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">#37677a</item>
        <item name="android:fontFamily">@font/exo_demi_bold</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="DashboardDetails">
        <item name="android:maxLines">1</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/exo_regular</item>
    </style>

    <style name="JobTypeRadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:backgroundTint">@color/job_type_button_background_tint</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:background">@drawable/job_type_button_background_selector</item>
        <item name="android:textColor">@color/job_type_button_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ScreenHeader">
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.13</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ScreenHeaderDivider">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/dark_sky_blue</item>
    </style>

    <style name="PillButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/link_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DisclaimerText">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/cloudy_blue</item>
    </style>
</resources>
