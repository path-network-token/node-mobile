<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="text_size_xsmall">10sp</dimen>
    <dimen name="text_size_small">12sp</dimen>
    <dimen name="text_size_medium">14sp</dimen>
    <dimen name="text_size_large">16sp</dimen>
    <dimen name="text_size_xlarge">20sp</dimen>

    <style name="Text"/>

    <style name="Text.Default">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/exo_demi_bold</item>
    </style>

    <style name="Text.Default.Bold">
        <item name="android:fontFamily">@font/exo_bold</item>
    </style>

    <style name="Text.Default.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Default.Bold.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Default.Medium">
        <item name="android:fontFamily">@font/exo_medium</item>
    </style>

    <style name="Text.Default.Medium.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Default.Header">
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.13</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <!-- EDIT TEXT -->
    <style name="Edit" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="EditError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/coral_pink</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- INDIVIDUAL STYLES -->
    <style name="SplashNode" parent="Text.Default">
        <item name="android:fontFamily">@font/exo_extra_light</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.38</item>
    </style>

    <style name="DashboardDetails" parent="Text.Default">
        <item name="android:letterSpacing">0.17</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingTop">@dimen/padding_s</item>
        <item name="android:paddingBottom">@dimen/padding_s</item>
        <item name="android:fontFamily">@font/exo_regular</item>
    </style>

    <style name="PillButton" parent="Text.Default.Bold">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/pill_button_text_selector</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:letterSpacing">0.19</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:stateListAnimator">@animator/button_state_list</item>
    </style>

    <style name="EditWalletButton" parent="Text.Default">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:background">@drawable/update_button</item>
        <item name="android:textColor">@color/dark_slate_blue</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:letterSpacing">0.19</item>
        <item name="android:stateListAnimator">@animator/button_state_list</item>
    </style>

    <style name="DisclaimerText" parent="Text.Default">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/cloudy_blue</item>
    </style>

    <style name="IntroText" parent="Text.Default">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lineSpacingExtra">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WalletPrompt" parent="Text.Default">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="JobReportHeader" parent="Text.Default.Bold.Small">
        <item name="android:layout_marginStart">@dimen/padding_s</item>
        <item name="android:layout_marginEnd">@dimen/padding_s</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textColor">@color/sky</item>
    </style>

    <style name="JobReportLinearChartLabel" parent="Text.Default.Small">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/exo_regular</item>
    </style>

    <style name="JobReportLinearChartValue" parent="Text.Default.Small">
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/exo_regular</item>
    </style>

    <style name="JobReportRadioButtonLabel" parent="Text.Default.Bold.Small">
        <item name="android:letterSpacing">0.11</item>
        <item name="android:textColor">@color/job_type_button_text_color</item>
    </style>

    <style name="PieChartValue" parent="Text.Default">
        <item name="android:fontFamily">@font/exo_semi_bold</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LabelStatus" parent="Text.Default.Bold.Small">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.11</item>
    </style>

    <style name="LabelIp" parent="Text.Default">
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:lines">1</item>
        <item name="autoSizeMaxTextSize">44sp</item>
        <item name="autoSizeMinTextSize">22sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>
</resources>
