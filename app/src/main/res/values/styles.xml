<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.WalletAddressInput" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/AppTheme.WalletAddressInput.HintAppearance</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="colorAccent">@color/dark_slate_blue</item>
        <item name="colorControlNormal">@color/dark_slate_blue</item>
        <item name="colorControlActivated">@color/dark_slate_blue</item>
    </style>

    <style name="AppTheme.WalletAddressInput.HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/sky</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/exo_bold</item>
        <item name="android:textColorHint">@color/sky</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BottomBarRadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/bottom_bar_text_selector</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="JobReportHeaderDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/dark_slate_blue</item>
    </style>

    <style name="ProgressLogs">
        <item name="android:letterSpacing">0.13</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">#37677a</item>
        <item name="android:fontFamily">@font/exo_demi_bold</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="JobTypeRadioButton" parent="JobReportRadioButtonLabel">
        <item name="android:button">@null</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/padding_m</item>
        <item name="android:paddingEnd">@dimen/padding_m</item>
        <item name="android:backgroundTint">@color/job_type_button_background_tint</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:background">@drawable/job_type_button_background_selector</item>
        <item name="android:stateListAnimator">@animator/button_state_list</item>
    </style>

    <style name="ScreenHeaderDivider">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">@dimen/padding_m</item>
        <item name="android:background">@color/dark_sky_blue</item>
    </style>

    <style name="CloseButton">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/ic_clear</item>
        <item name="android:stateListAnimator">@animator/button_state_list</item>
    </style>

</resources>
